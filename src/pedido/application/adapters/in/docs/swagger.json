{
  "components": {
    "schemas": {
      "CheckoutBody": {
        "properties": {
          "client": {
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            },
            "required": ["id", "name"],
            "type": "object"
          },
          "products": {
            "items": {
              "properties": {
                "category": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "price": {
                  "type": "number"
                }
              },
              "required": ["id", "name", "category", "price"],
              "type": "object"
            },
            "type": "array"
          },
          "totalItens": {
            "type": "number"
          },
          "totalValue": {
            "type": "number"
          }
        },
        "required": ["client", "products", "totalValue", "totalItens"],
        "type": "object"
      },
      "Error": {},
      "Pedido": {}
    }
  },
  "openapi": "3.1.0",
  "paths": {
    "/pedido": {
      "get": {
        "parameters": [
          {
            "description": "Filtrar pedidos por status",
            "in": "header",
            "name": "pedido_status",
            "required": false,
            "schema": {
              "default": "PENDENTE",
              "enum": ["PENDENTE", "PROCESSANDO", "CONCLU√çDO"],
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Pedido"
                  },
                  "type": "array"
                }
              }
            },
            "description": "Lista de pedidos"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            },
            "description": "Erro interno do servidor"
          }
        },
        "summary": "Listar pedidos",
        "tags": ["Pedido"]
      }
    },
    "/pedido/checkout": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckoutBody"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pedido"
                }
              }
            },
            "description": "Pedido criado com sucesso"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            },
            "description": "Erro interno do servidor"
          }
        },
        "summary": "Realizar checkout de um pedido",
        "tags": ["Pedido"]
      }
    }
  },
  "tags": [
    {
      "description": "Endpoints relacionados a pedidos",
      "name": "Pedido"
    }
  ]
}
